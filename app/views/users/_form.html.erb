<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  
  <%= f.label :money %>
  <%= f.number_field :money %><br>

  <%= f.label :developer, "Are you a game developer?" %>
  <%= f.check_box :developer %>
  
  <%= f.submit "Submit" %>
<% end %>