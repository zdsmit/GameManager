<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
    <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @game do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :price, "Price $" %>
  <%= f.number_field :price %><br><br>

  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "Please select your genre from this dropdown") %><br>
  <p>Or <%= link_to "create a new genre here!", new_genre_path %></p><br>

  <%= f.submit "Submit" %>
<% end %>