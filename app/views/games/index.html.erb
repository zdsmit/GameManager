<% if @user %>
  <h1><%= @user.name %>'s Games</h1>
<% else %>
  <h1>Take a look at all our amazing games!</h1>
<% end %>  

<% @games.each do |game| %>
  <%=link_to "#{game.title}", game_path(game) %><br>
  <p>Developer: <%= link_to game.developer.name, user_path(game.developer) %></p><br><br>
<% end %>

<% if current_user.developer == true %>
  <%= link_to "Create a New Game", new_game_path %>
<% end %>